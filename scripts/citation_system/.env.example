# Citation System Configuration Template
# Copy this file to .env and customize the values

# Logging configuration
LOG_LEVEL=INFO  # Set to DEBUG for more detailed logs

# Cache settings
CACHE_ENABLED=true
CACHE_EXPIRY=604800  # 7 days in seconds

# Performance settings
BATCH_SIZE=50
PARALLEL_REQUESTS=5

# iCite API settings (open access)
ICITE_ENABLED=true
ICITE_API_URL=https://icite.od.nih.gov/api
ICITE_RATE_LIMIT=10.0

# Scopus API settings (requires institutional access)
# Contact your library for access
SCOPUS_ENABLED=false
SCOPUS_API_URL=https://api.elsevier.com
SCOPUS_API_KEY=
SCOPUS_INSTITUTIONAL_TOKEN=
SCOPUS_RATE_LIMIT=5.0

# Web of Science API settings (requires institutional access)
# Contact your library for access
WOS_ENABLED=false
WOS_API_URL=https://api.clarivate.com/apis/wos-starter/v1
WOS_API_KEY=
WOS_API_SECRET=
WOS_RATE_LIMIT=2.0

# PubMed API settings
PUBMED_EMAIL=your-email@example.com  # Required for PubMed API
PUBMED_TOOL=awesome-virome-citation-collector